 <h1>Editing Book</h1>
 <% if @book.errors.any? %>
  <div id="error"><%= @book.errors.count %><%= ' error'.pluralize(@book. errors.count) %> prohibited this book from being saved
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  </div>
 <% end %>
 <div class="edit_book_field">
  <%= form_with model: @book, url:book_path(@book.id), method: :patch, local:true do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <div><%= f.text_field :title %></div>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <div><%= f.text_area :body %></div>
  </div>
  <div class="action"></div><%= f.submit 'Update Book' %></div>
  <% end %>
 </div>

 <%= link_to "Show", book_path(@book.id) %>
